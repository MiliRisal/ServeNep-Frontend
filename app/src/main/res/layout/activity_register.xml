<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UI.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_account"
        android:textColor="#686de0"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signup_to_create_account"
       android:textStyle="normal"
        android:textColor="#4834d4"
        android:textSize="19sp"
        android:layout_marginTop="2dp"
        android:layout_marginStart="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/servenep"
        android:textColor="#686de0"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_type"
            android:textColor="#9b59b6"
            android:textStyle="normal"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="25dp"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:id="@+id/radioGroup">



        <RadioButton
            android:id="@+id/rduser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext"
            android:textColor="#9b59b6"
            android:layout_marginStart="25dp"
            android:layout_marginTop="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/customer"
            android:drawableStart="@drawable/ic_baseline_account_circle_24"
            android:textSize="17sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rdtasker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="#9b59b6"
            android:background="@drawable/edittext"
            android:text="@string/tasker"
            android:checked="true"
            android:paddingStart="23dp"
            android:paddingEnd="25dp"
            android:layout_marginTop="5dp"
            android:drawableStart="@drawable/ic_baseline_account_circle_24"
            android:textSize="17sp"
            android:textStyle="bold" />
    </RadioGroup>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fullname"
        android:textColor="#9b59b6"
        android:textStyle="normal"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="25dp"/>
    <EditText
        android:id="@+id/etfullname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="5dp"
        android:drawableEnd="@drawable/ic_baseline_account_circle_24"
        android:background="@drawable/edittext"
        android:padding="8dp"
        android:textSize="20sp"
        android:textStyle="bold"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:textColor="#9b59b6"
        android:textStyle="normal"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="25dp"/>
    <EditText
        android:id="@+id/etemail"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="5dp"
        android:drawableEnd="@drawable/ic_baseline_email_24"
        android:background="@drawable/edittext"
        android:padding="8dp"
        android:textSize="20sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/address"
        android:textColor="#9b59b6"
        android:textStyle="normal"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"/>
    <EditText
        android:id="@+id/etaddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/edittext"
        android:drawableEnd="@drawable/ic_baseline_location_on_24"
        android:textColorHint="#000"
        android:padding="8dp"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phone_number"
        android:textStyle="normal"
        android:textColor="#9b59b6"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"/>
    <EditText
        android:id="@+id/etphone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/edittext"
        android:drawableEnd="@drawable/ic_baseline_local_phone_24"
        android:layout_marginRight="25dp"
        android:textColorHint="#000"
        android:padding="8dp"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:textColor="#9b59b6"
        android:textStyle="normal"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"/>
    <EditText
        android:id="@+id/etpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/edittext"
        android:layout_marginRight="25dp"
        android:drawableEnd="@drawable/ic_baseline_lock_24"
        android:textColorHint="#000"
        android:padding="8dp"
        android:textSize="20sp"
        android:textStyle="bold"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation='horizontal'
            android:layout_weight="2"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp">

            <TextView
                android:id="@+id/tvCat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:layout_weight="1"
                android:textColor="#9b59b6"
                android:textStyle="normal"
                android:textSize="20sp"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price per hour"
                android:layout_weight="1"
                android:textColor="#9b59b6"
                android:textStyle="normal"
                android:textSize="20sp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="15dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation='horizontal'
            android:layout_weight="2">


            <Spinner
                android:id="@+id/spCat"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:padding="8dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/edittext"
                android:textColorHint="#000"/>

            <EditText
                android:id="@+id/etPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/edittext"
                android:drawableEnd="@drawable/ic_baseline_attach_money_24"
                android:textColorHint="#000"
                android:padding="8dp"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </LinearLayout>

    <Button
        android:id="@+id/btnsignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/button"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:padding="10dp"
        android:text="@string/sign_up"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginTop="30dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/already_have_an_account"
                android:textSize="17sp"/>
            <TextView
                android:id="@+id/tvSignin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign_in"
                android:textColor="#4834d4"
                android:textSize="19sp"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>