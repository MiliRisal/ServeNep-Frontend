<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/tasker_layout"
    android:orientation="vertical"
    android:background="@color/black">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        app:cardBackgroundColor="#000000"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp"
        android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userProfileImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/girl" />

        <TextView
            android:id="@+id/txtUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/userProfileImage"
            android:letterSpacing="0.03"
            android:text="User Name"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtUserAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtUserName"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/userProfileImage"
            android:letterSpacing="0.03"
            android:text="Address"
            android:textColor="#A6A6A6"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btnBookUser"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_below="@+id/txtUserAddress"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/custom_inputfield2"
            android:gravity="center"
            android:text="Book"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/btnViewUserData"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_below="@+id/txtUserAddress"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="View User Profile"
            android:visibility="gone"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:textStyle="bold" />

     </RelativeLayout>
    </androidx.cardview.widget.CardView>
    </RelativeLayout>

</LinearLayout>